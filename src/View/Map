/*global kakao*/ 
import React,{useEffect} from 'react';


function Loc(props) {
  useEffect(()=>
  //  const getData = ()=>
  {
   
var mapContainer = document.getElementById('map'), // 지도를 표시할 div 
    mapOption = {
        center: new kakao.maps.LatLng(37.60450771132806, 126.92827091218756), // 지도의 중심좌표
        level: 7 // 지도의 확대 레벨
    };  

// 지도를 생성합니다    
var map = new kakao.maps.Map(mapContainer, mapOption); 

// 주소-좌표 변환 객체를 생성합니다
var geocoder = new kakao.maps.services.Geocoder();

    <React.Fragment>
    {
         props.state.info === undefined?<br/>:
         props.state.info.map((item) => {return(
    // 주소로 좌표를 검색합니다
    geocoder.addressSearch(item.address1, function(data, status) {
    
    // 정상적으로 검색이 완료됐으면 
     if (status === kakao.maps.services.Status.OK) {

        var coords = new kakao.maps.LatLng(data.lng, data.lat);
       //var coords = new kakao.maps.LatLng(item.lon, item.lat);

       
        console.log(item.workplacename,item.address1);
        // 결과값으로 받은 위치를 마커로 표시합니다
        var marker = new kakao.maps.Marker({
            map: map,
            position:new kakao.maps.LatLng(item.lon, item.lat)
        });
    
        // 인포윈도우로 장소에 대한 설명을 표시합니다
        var infowindow = new kakao.maps.InfoWindow({
            content: '<div style="width:350px;text-align:center;padding:6px 0;">'+item.workplacename+'<br/>'+item.address1+'</div>'
        });
        infowindow.open(map, marker);
        // 지도의 중심을 결과값으로 받은 위치로 이동시킵니다
        map.setCenter(coords);
    } 
}))			
}

</React.Fragment>; 

}, )
return (
    <div id="map" style={{width:"100%",height:"550px"}}></div> 
)   

 
}

export default Loc;